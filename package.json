{
  "name": "extensions-root",
  "private": true,
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "ts:node": "./node_modules/.bin/ts-node -r tsconfig-paths/register",
    "ts:node:extensions": "pnpm ts:node --project ./extensions/scripts/tsconfig.json",
    "build": "pnpm i && pnpm ts:node:extensions ./scripts/build.ts --include \"!([.]|commo*)*/\" --watch false --parrallel false",
    "dev": "pnpm ts:node:extensions ./scripts/build.ts --watch",
    "new:extension": "pnpm ts:node:extensions ./extensions/scripts/factories/extension.ts",
    "add:ui": "npm run ts:node:extensions -- ./extensions/scripts/factories/ui.ts",
    "add:arg": "npm run ts:node:extensions -- ./extensions/scripts/factories/customArgument.ts",
    "add:test": "npm run ts:node:extensions -- ./extensions/scripts/factories/test.ts",
    "add:package": "npm run ts:node:extensions -- ./extensions/scripts/factories/package.ts",
    "transpile:vm": "pnpm ts:node:extensions ./extensions/scripts/transpileVm.ts",
    "test:extensions": "npm run test --prefix ./extensions/",
    "document:extensions": "npm run document --prefix ./extensions/",
    "edocument": "npm run document:extensions",
    "etest": "npm run test:extensions"
  },
  "devDependencies": {
    "@types/node": "^20.12.2",
    "@types/webgl2": "^0.0.6",
    "@types/yargs": "^17.0.32",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.1.1",
    "tslib": "^2.4.1",
    "typescript": "latest",
    "yargs": "^17.7.2"
  },
  "overrides": {
    "ts-node": {
      "typescript": "$typescript"
    }
  }
}