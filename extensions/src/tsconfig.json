{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": false,
    "moduleResolution": "Node",
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    //"noImplicitReturns": true,
    "skipLibCheck": true,
    "paths": {
      "$root": ["../../"],
      "$root/*": ["../../*"],
      "$common": ["./common"],
      "$common/*": ["./common/*"],
      "$scratch-vm": ["../../packages/scratch-vm/src"],
      "$scratch-vm/*": ["../../packages/scratch-vm/src/*"]
    }
  },
  "include": ["**/*.ts"],
}