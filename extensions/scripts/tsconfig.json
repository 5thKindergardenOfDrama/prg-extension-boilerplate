{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": false,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "paths": {
      "$root": ["../../"],
      "$root/*": ["../../*"],
      "$common": ["../src/common"],
      "$common/*": ["../src/common/*"],
      "$scratch-vm": ["../../packages/scratch-vm/src"],
      "$scratch-vm/*": ["../../packages/scratch-vm/src/*"]
    }
  },
  "include": ["**/*.ts", "../../scripts/**/*.ts"],
}