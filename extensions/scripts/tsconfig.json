{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowJs": false,
    "moduleResolution": "node",
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    //"noImplicitReturns": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "paths": {
      "$ExtensionFramework": ["../../packages/scratch-vm/src/typescript-support"],
      "$ExtensionFramework/*": ["../../packages/scratch-vm/src/typescript-support/*"],
    }
  },
  "include": ["**/*.ts", "../../scripts/**/*.ts"],
}